error_button_flash($('input[name="commit"]'));
$("#error-text").remove();

function error_button_flash(button) {
  //flash button red
  button.css("background-color", "red");
  button.css("border-color", "red");
  button.css("color", "#fff");
  button.css("outline", "none");
  button.animate({ backgroundColor: "##81caa6" }, {queue: false, duration: 1000});
  button.animate({ borderColor: "##81caa6" }, {queue: false, duration: 1000}); 
	button.click(function() {
		$("#error-text").remove();
		$(".has-error").removeClass("has-error");
	})
};

$("#verification-code").parent().addClass("has-error");
$("#account-detail-form").append("<p id='error-text' style='color:red; position: absolute; width: 100%;'>Sorry, the confirmation code didn't match.<small>");