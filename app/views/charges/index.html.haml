.container-fluid.scrollable-with-offset

  .row{style: 'padding: 0px 20px;'}
    - if @charges.present?
      =render 'charge_list'
      .scrollable#charges-outlook{ class: (@charges.present? || @linked_accounts.present?) ? "col-md-8 col-sm-6" : "col-xs-12"}
        =render 'linked_accounts/index'
        =render 'twelve_month_outlook'
    - else
      .scrollable#charges-outlook.col-md-8.col-sm-6.col-md-offset-2.col-sm-offset-3
        =render 'new_user_prompt'
  
:javascript
  $(document).ready(function() {
    if ($(window).width() >= 767) {
      var h = $(window).height();
      if ($('#charges-total-by-merchant-chart').size() > 0 ) {
        var chart = $('#charges-total-by-merchant-chart');
        chart.highcharts().setSize( chart.width() , h - chart.offset().top - 60 );
      }
      $('.scrollable').height((h-109)+'px');
    }
  });
  $( window ).resize(function() {
    if ($(window).width() >= 767) {
      var h = $(window).height();
      if ($('#charges-total-by-merchant-chart').size() > 0 ) {
        var chart = $('#charges-total-by-merchant-chart');
        chart.highcharts().setSize( chart.width() , h - chart.offset().top - 60 );
      }
      $('.scrollable').height((h-109)+'px');
    } else {
      $('.scrollable').height('auto');
      $('.scrollable-with-offset').height('auto');
      if ($('#charges-total-by-merchant-chart').size() > 0 ) { $('#charges-total-by-merchant-chart').height('auto'); }
    }
  });

  function showLoader() {
    $(".modal-dialog").remove();
    $("#modal-container").append("#{ j render 'shared/loading' }");
    $("#modal-container").modal({backdrop: 'static'});
  }

  $(function () {
    $('[data-toggle="popover"]').popover({html: true, trigger: 'focus', title: "<i class='fa fa-calendar'></i> Charge History"});
  })