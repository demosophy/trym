<p id="notice"><%= notice %></p>

<h1>Listing Charges</h1>

<table>
  <thead>
    <tr>
      <th>Description</th>
      <th>User</th>
      <th>Amount</th>
      <th>Start date</th>
      <th>End date</th>
      <th>Renewal period in weeks</th>
      <th>Billing day</th>
      <th>Wizard complete</th>
      <th>Last date billed</th>
      <th>Merchant</th>
      <th>Recurring</th>
      <th>Billed to date</th>
      <th>Recurring score</th>
      <th>Transaction request</th>
      <th>Linked account</th>
      <th>Trym category</th>
      <th>History</th>
      <th>Plaid name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @charges.each do |charge| %>
      <tr>
        <td><%= charge.description %></td>
        <td><%= charge.user %></td>
        <td><%= charge.amount %></td>
        <td><%= charge.start_date %></td>
        <td><%= charge.end_date %></td>
        <td><%= charge.renewal_period_in_weeks %></td>
        <td><%= charge.billing_day %></td>
        <td><%= charge.wizard_complete %></td>
        <td><%= charge.last_date_billed %></td>
        <td><%= charge.merchant %></td>
        <td><%= charge.recurring %></td>
        <td><%= charge.billed_to_date %></td>
        <td><%= charge.recurring_score %></td>
        <td><%= charge.transaction_request %></td>
        <td><%= charge.linked_account %></td>
        <td><%= charge.trym_category %></td>
        <td><%= charge.history %></td>
        <td><%= charge.plaid_name %></td>
        <td><%= link_to 'Show', charge %></td>
        <td><%= link_to 'Edit', edit_charge_path(charge) %></td>
        <td><%= link_to 'Destroy', charge, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

