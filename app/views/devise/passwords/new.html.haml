.col-lg-4.col-lg-offset-4.col-md-6.col-md-offset-3.col-sm-6.col-sm-offset-3
  .text-center{style: "margin: 30px;"}
    %h3.modal-header-text Forgot your password?

    = simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f|
      = f.error_notification

      .form-inputs
        = f.input :email, required: true, autofocus: true, input_html: { class: "text-center" }

      .form-actions
        = f.button :submit, "Send me reset password instructions"

    = render "devise/shared/links"