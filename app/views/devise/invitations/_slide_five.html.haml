.item.active
  .flex-center
    .text-center{style: "width: 100%;"}
      .trym-talking
        %p.opener.trym-fade
          stop wasting time and money on recurring expenses
      .trym-fade-in
        %p.lead.trym-subtext
          create an account and start tracking your recurring expenses in five minutes or less
        = simple_form_for resource, :as => resource_name, :url => invitation_path(resource_name), :html => {:method => :put} do |f|
          = f.hidden_field :invitation_token
          .form-inputs
            .row
              .col-lg-2.col-lg-offset-5.col-md-4.col-md-offset-4.col-sm-6.col-sm-offset-3.col-xs-10.col-xs-offset-1.text-center
                = f.input :password, input_html: { class: "text-center" }
                = f.input :password_confirmation, input_html: { class: "text-center" }
                = f.button :submit, "create my account", class: "btn btn-primary btn-block"