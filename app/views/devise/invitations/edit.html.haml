.col-lg-4.col-lg-offset-4.col-md-6.col-md-offset-3.col-sm-6.col-sm-offset-3
  %h2.text-center= t "devise.invitations.edit.header"
  = simple_form_for resource, :as => resource_name, :url => invitation_path(resource_name), :html => {:method => :put} do |f|
    = f.hidden_field :invitation_token

    .text-center
      .form-inputs
        = f.input :password, input_html: { class: "text-center" }
        = f.input :password_confirmation, input_html: { class: "text-center" }

      = f.button :submit, "create my account", class: "btn btn-primary"