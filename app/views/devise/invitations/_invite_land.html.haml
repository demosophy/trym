.item.active
  .flex-center
    .text-center{style: "width: 100%;"}
      .trym-talking
        %p.opener.trym-fade-in
          hello! i'm <span class='brand-color'>t</span>rym.
      .trym-fade-in
        %p.lead.trym-subtext
          a digital assistant that can track, modify and cancel any recurring expense. 
          %br
          %span for free.
        %p.lead lets get you started
        = simple_form_for resource, :as => resource_name, :url => invitation_path(resource_name), :html => {:method => :put} do |f|
          = f.hidden_field :invitation_token
          .form-inputs
            .row
              .col-lg-2.col-lg-offset-4.col-md-3.col-md-offset-3.col-sm-6.col-sm-offset-3.col-xs-10.col-xs-offset-1.text-center
                = f.input :password, input_html: { class: "text-center" }
              .col-lg-2.col-lg-offset-0.col-md-3.col-md-offset-0.col-sm-6.col-sm-offset-3.col-xs-10.col-xs-offset-1.text-center
                = f.input :password_confirmation, input_html: { class: "text-center" }
            .row
              .col-lg-2.col-lg-offset-5.col-md-4.col-md-offset-4.col-sm-6.col-sm-offset-3.col-xs-10.col-xs-offset-1.text-center
                = f.button :submit, "create my account", class: "btn btn-primary btn-block"
