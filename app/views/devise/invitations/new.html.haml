.col-lg-4.col-lg-offset-4.col-md-6.col-md-offset-3.col-sm-6.col-sm-offset-3
  .text-center{style: "margin: 30px;"}
    %h2.modal-header-text i-i-i-i-innnvite!!
    = simple_form_for resource, :as => resource_name, :url => invitation_path(resource_name), :html => {:method => :post} do |f|
      = devise_error_messages!
      - resource.class.invite_key_fields.each do |field|
        .form-inputs.text-align
          = f.input field, label: false, input_html: { class: "text-center" }
          = f.button :submit, t("devise.invitations.new.submit_button") 