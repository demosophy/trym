.trym-fade-in
  .row
    .col-md-10.col-md-offset-1.text-center
      .trym-talking
        %p.lead.without-margin
          How can i help you manage your #{@stop_order.charge.descriptor} service?

.row.trym-fade-in
  .col-lg-6.col-lg-offset-3.col-md-10.col-md-offset-1.col-xs-12
    .paragraph-spacer
    =form_for @stop_order, url: wizard_path, method: :put, html: {style: "width: 350px; margin: 0 auto;"} do |f|

      %h4
        .radio
          %label
            =f.radio_button :option, "cancel_all"
            Cancel my account / service
      %h4     
        .radio
          %label
            =f.radio_button :option, "downgrade"
            Downgrade or cancel part of my service 
      %h4
        .radio
          %label
            =f.radio_button :option, "upgrade"
            Upgrade or add services to my account

      .paragraph-spacer

      .row
        .col-xs-6.text-right  
          -if @stop_order.status == "started"
            =link_to "Back", stop_order_path(@stop_order.id), method: :delete, class: "btn btn-default"
          -else
            =link_to "Back", charges_path, class: "btn btn-default"
        .col-xs-6.text-left
          =f.button "Next", class: "btn btn-primary"