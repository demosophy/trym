-flash.each do |type, message|
  #flash-container
    .alert{role: 'alert', class: flash_alert_type(type) }
      %button.close{ onClick: "$(this).parent().hide();", style: "margin-top: -8px;" }
        %span{ aria_hidden: "true", style: "font-size: 150%; font-weight: 200;"} &times;
        %span.sr-only Close
      .text-center= message