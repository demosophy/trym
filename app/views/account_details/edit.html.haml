.container.text-center
  .row
    .col-md-4.col-md-offset-4.col-sm-6.col-sm-offset-3
      .paragraph-spacer
      .paragraph-spacer
      .paragraph-spacer
      %h3 What's your number?
      %p#error-text
      = simple_form_for @account_detail do |f|
        %p.text-center
          we'll verify your phone number by sending you a text message so grab your phone before you hit submit

        .form-inputs
          = f.input :phone, label: "Phone Number", as: :string, input_html: { value: @account_detail.formatted_phone }

        .form-actions{style: "margin-top: 10px;"}
          = render 'shared/cancel_button'
          =f.button :submit, "Verify", class: "btn-primary"

      %p{style: "margin-top: 10px;"}
        %small
          %b Note: 
          We don't charge for text messages sent to your mobile device; but your carrier's standard messaging rates still apply
      .paragraph-spacer
      .paragraph-spacer
      .paragraph-spacer

:javascript

  $('#account_detail_phone').formatter({
    'pattern': '({{999}}) {{999}}-{{9999}}',
    'persistent': true
  });